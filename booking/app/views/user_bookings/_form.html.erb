  </div>

  <div class="field">
    <%= form.label :to %>
    <%= form.datetime_select :to, id: :user_booking_to %>
  </div>

  <div class="field">
    <%= form.label :location_id %>
    <%= collection_select(:user_booking, :location_id, Location.all, :id, :name, prompt: true) %>
  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-default' %>
  </div>
<% end %>
