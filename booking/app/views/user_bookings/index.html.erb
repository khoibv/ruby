<p id="notice"><%= notice %></p>

<h1>Booking list</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_bookings.each do |user_booking| %>
      <tr>
        <td><%= user_booking.from.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= user_booking.to.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= user_booking.location.name %></td>
        <td><%= link_to 'Show', user_booking %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(user_booking) %></td>
        <td><%= link_to 'Destroy', user_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Booking', new_user_booking_path, :class => 'btn btn-default' %>
